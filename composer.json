{
  "name": "compolomus/compomage",
  "description": "Image helper",
  "license": "MIT",
  "keywords": [
    "gd",
    "imagick"
  ],
  "type": "library",
  "authors": [
    {
      "name": "Koenig",
      "email": "compolom@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Compolomus\\Compomage\\": "src/"
    }
  },
  "require": {
    "php": "^8.0",
    "ext-gd": "*",
    "ext-imagick": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "laminas/laminas-coding-standard": "^1.0"
  },
  "suggest": {
    "ext-xdebug": "^3.0"
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test-coverage": "phpunit --coverage-clover clover.xml"
  },
  "minimum-stability": "stable"
}
